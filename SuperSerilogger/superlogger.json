{
    "template": "superlogger-*",
    "settings": {
        "index.refresh_interval": "5s"
    },
    "mappings": {
        "_default_": {
            "_all": {
                "enabled": true,
                "omit_norms" : true
            }, 
            "dynamic_templates": [
                {
                  "numerics_in_fields": {
                      "path_match":"fields\\.[\\d+]$",
                      "match_pattern":"regex",
                      "mapping": {
                          "type":"string",
                          "index":"analyzed",
                          "omit_norms":true
                      }
                  }
                },
                {
                    "string_fields": {
                        "match": "*",
                        "match_mapping_type": "string",
                        "mapping": {
                            "type": "string",
                            "index": "analyzed",
                            "omit_norms": true,
                            "fields": {
                                "raw": {
                                    "type": "string",
                                    "index": "not_analyzed",
                                    "ignore_above": 256
                                }
                            }
                        }
                    }
                }
            ],			
            "properties": {
				"@timestamp" : {
					"type": "date",
					"index": "analyzed"
				},
				"product_name" : {
					"type": "string",
					"index": "analyzed"
				},
				"product_location" : {
					"type": "string",
					"index": "analyzed"
				},
				"product_module" : {
					"type": "string",
					"index": "analyzed"
				},
				"product_workflow" : {
					"type": "string",
					"index": "analyzed"
				},
				"product_step" : {
					"type": "string",
					"index": "analyzed"
				},
				"site_name" : {
					"type": "string",
					"index": "analyzed"
				},
				"site_id" : {
					"type": "integer",
					"index": "analyzed"
				},
				"pmc_name" : {
					"type": "string",
					"index": "analyzed"
				},
				"pmc_id" : {
					"type": "index",
					"index": "analyzed"
				},
				"user_name" : {
					"type": "string",
					"index": "analyzed"
				},
				"user_id" : {
					"type": "index",
					"index": "analyzed"
				},
                "logtime": {
                    "type": "date",
                    "index": "analyzed"
                }
            }
        }
    }
}